{{define "address"}}
<!DOCTYPE html>
<html lang="en">

{{template "html-head" printf "Decred Address %s" .Data.Address}}
<body class="{{ theme }}">
    {{template "navbar" . }}
    {{with .Data}}
    {{$TxnCount := .TxnCount}}
    {{$txType := .TxnType}}
    <div class="container main"
      data-controller="address"
      data-address-offset="{{.Offset}}"
      data-address-dcraddress="{{.Address}}"
      data-address-merged-count="{{.KnownMergedSpendingTxns}}"
      data-address-spending-count="{{.KnownSpendingTxns}}"
      data-address-funding-count="{{.KnownFundingTxns}}"
    >
        <div class="row">
            <div class="col-md-8 col-sm-6">
                <h4>Address</h4>
                <div class="mono"
                    data-target="address.addr"
                    style="margin-bottom: 12px;">
                    {{.Address}}<a
                        data-action="click->address#showQRCode"
                        data-target="address.qron"
                        class="dcricon-qrcode jsonly no-underline color-inherit p10"
                    ></a>
                </div>
                <div class="row">
                    <div data-action="click->address#hideQRCode"
                        data-target="address.qroff"
                        class="col opacity-transition"
                    ></div>
                </div>
                {{if .IsDummyAddress}}
                  <br/>
                  This a is dummy address, typically used for unspendable ticket change outputs.<br/>
                  <br/>
                {{else}}
                <div class="btn-group mr-auto mb-0 align-bottom address-btn"
                    data-toggle="buttons"
                    data-target="address.btns"
                    data-action="click->address#changeView"
                >
                    <input type="button" class="addr-btn list btn btn_sm btn-active" value="List" name="list">
                    <input type="button" class="addr-btn chart btn btn_sm" value="Charts"
                        name="chart" {{if or $.IsLiteMode (le (len .Transactions) 1)}}disabled{{end}}>
                </div>
                {{end}}
            </div>
            <div class="col-md-4 col-sm-6 d-flex pb-3">
                <table>
                    <tr  class="h2rem">
                        <td id="{{.Balance.TotalUnspent}}" class="pr-2 lh1rem vam text-right xs-w91"
                            data-target="address.unspent">TOTAL UNSPENT</td>
                        {{if .Fullmode}}
                            <td class="fs28 mono nowrap fs16-decimal d-flex align-items-center justify-content-end rm-spacing">
                                {{if .Balance}}
                                    {{template "decimalParts" (amountAsDecimalParts .Balance.TotalUnspent true)}}<span class="pl-1 unit">DCR</span>
                                {{else}}
                                <span class="pl-1 unit">0.000000000 DCR</span>
                                {{end}}
                            </td>
                        {{else}}
                            {{if ge .KnownTransactions .MaxTxLimit}}
                            <td class="fs28 mono nowrap d-flex align-items-center justify-content-end">unavailable</td>
                            {{else}}
                            <td class="fs28 mono nowrap fs16-decimal d-flex align-items-center justify-content-end">{{.AmountUnspent.ToCoin}}</td>
                            {{end}}
                        {{end}}
                    </tr>
                    <tr>
                        <td class="text-right pr-2">RECEIVED</td>
                        {{if .Fullmode}}
                            <td class="mono nowrap text-right rm-spacing justify-content-end">
                                {{if .Balance}}
                                    {{$received := add .Balance.TotalSpent .Balance.TotalUnspent}}
                                    {{template "decimalParts" (amountAsDecimalParts $received true)}}<span class="pl-1 unit">DCR</span>
                                {{else}}
                                <span class="pl-1 unit">0.000000000 DCR</span>
                                {{end}}
                            </td>
                        {{else}}
                            {{if ge .KnownTransactions .MaxTxLimit}}
                            <td class="mono nowrap text-right">unavailable</td>
                            {{else}}
                            <td class="mono nowrap text-right">{{.AmountReceived.ToCoin}}</td>
                            {{end}}
                        {{end}}
                    </tr>
                    <tr>
                        <td class="text-right pr-2">SPENT</td>
                        {{if .Fullmode}}
                            <td class="mono nowrap text-right rm-spacing justify-content-end">
                                {{if .Balance}}
                                    {{template "decimalParts" (amountAsDecimalParts .Balance.TotalSpent true)}}<span class="pl-1 unit">DCR</span>
                                {{else}}
                                <span class="pl-1 unit">0.000000000 DCR</span>
                                {{end}}
                            </td>
                        {{else}}
                            {{if ge .KnownTransactions .MaxTxLimit}}
                            <td class="mono nowrap text-right">unavailable</td>
                            {{else}}
                            <td class="mono nowrap text-right">{{.AmountSent.ToCoin}}</td>
                            {{end}}
                        {{end}}
                    </tr>
                    {{if ne .NumUnconfirmed 0}}
                        <tr data-target="address.numUnconfirmed">
                            <td class="text-right pr-2">UNCONFIRMED</td>
                            <td class="mono nowrap text-right">
                                {{.NumUnconfirmed}} transaction{{if gt .NumUnconfirmed 0}}s{{end}}
                            </td>
                        </tr>
                    {{end}}
                </table>
            </div>
        </div>

        {{if not .IsDummyAddress}}
        <div class="row">
            <div class="col">
                <div class="list-display position-relative" data-target="address.listbox">
                  <div class="modal"></div>
                  <h5 class="mr-auto mb-0">History</h5>
                  {{if lt .NumTransactions $TxnCount}}
                    <div class="d-flex flex-wrap-reverse align-items-center justify-content-end">
                        <span class="fs12 nowrap text-right" data-target="address.range">
                            {{intComma (add .Offset 1)}} &mdash; {{intComma (add .Offset .NumTransactions)}} of
                                <span data-target="address.txnCount" data-txn-count="{{$TxnCount}}">{{intComma $TxnCount}}</span> transactions
                            {{if and (not .Fullmode) (ge .KnownTransactions .MaxTxLimit)}}
                            <sup>*</sup>
                            {{end}}
                        </span>
                        <nav aria-label="address transactions navigation" data-limit="{{.Limit}}" class="ml-2">
                            <ul class="pagination mb-0 pagination-sm">
                                <li class="page-item {{if eq .Offset 0}}disabled{{end}}"
                                    data-target="address.pageminus">
                                    <a  class="page-link"
                                        href="{{.Path}}?n={{.Limit}}&start={{if gt (subtract .Offset .Limit) 0}}{{subtract .Offset .Limit}}{{else}}0{{end}}&txntype={{$txType}}"
                                        data-turbolinks="false"
                                        data-target="address.paginator"
                                        data-action="address#prevPage"
                                    >Previous</a>
                                </li>
                                <li class="page-item {{if lt (subtract $TxnCount .Offset) (add .Limit 1)}}disabled{{end}}"
                                    data-target="address.pageplus">
                                    <a  class="page-link"
                                        href="{{.Path}}?n={{.Limit}}&start={{add .Offset .Limit}}&txntype={{$txType}}"
                                        data-turbolinks="false"
                                        data-target="address.paginator"
                                        data-action="address#nextPage"
                                    >Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                  {{else}}
                      <span class="fs12 nowrap text-right" data-target="address.txnCount" data-txn-count="{{$TxnCount}}" data-formatted="true">
                  {{intComma $TxnCount}} transaction{{if gt $TxnCount 1}}s{{end}}</span>
                  {{end}}
                  <div data-target="address.table">
                    {{template "addressTable" .}}
                  </div>
                  <div
                      id="txntype-wrapper"
                      class="d-flex align-items-center justify-content-end"
                  >
                      <label class="mb-0 mr-1" for="txntype">Type</label>
                      <select
                          name="txntype"
                          id="txntype"
                          data-target="address.txntype"
                          data-action="change->address#changeTxType"
                          class="form-control-sm mb-2 mr-sm-2 mb-sm-0 {{if not .Fullmode}}disabled{{end}}"
                          {{if not .Fullmode}}disabled="disabled"{{end}}
                      >
                          <option {{if eq $txType "all"}}selected{{end}} value="all">All</option>
                          <option {{if eq $txType "credit"}}selected{{end}} value="credit">Credits</option>
                          <option {{if eq $txType "debit"}}selected{{end}} value="debit">Debits</option>
                          <option {{if eq $txType "merged_debit"}}selected{{end}} value="merged_debit">Merged Debits</option>
                      </select>
                  </div>
                  {{if and (not .Fullmode) (ge .KnownTransactions .MaxTxLimit)}}
                  <div>
                      *Limit of {{.MaxTxLimit}} transactions shown in lite mode.
                  </div>
                  {{end}}
                  <div
                      id="pagesize-wrapper"
                      class="hidden d-flex align-items-center justify-content-end"
                  >
                      <label class="mb-0 mr-1" for="pagesize">Page size</label>
                      <select
                          name="pagesize"
                          id="pagesize"
                          data-target="address.pagesize"
                          data-action="change->address#changePageSize"
                          class="form-control-sm mb-2 mr-sm-2 mb-sm-0 {{if lt $TxnCount 20}}disabled{{end}}"
                          {{if lt $TxnCount 20}}disabled="disabled"{{end}}
                      >
                      {{$Txlen := len .Transactions}}
                      {{if ge $TxnCount 20}}<option {{if eq $Txlen 20}}selected{{end}} value="20">20</option>{{end}}
                      {{if ge $TxnCount 100}}<option {{if eq $Txlen 100}}selected{{end}} value="100">100</option>{{end}}
                      {{if lt $TxnCount 1000}}
                          {{if eq $TxnCount 20 100}}{{else}}<option {{if eq $Txlen $TxnCount}}selected{{end}}
                              value="{{$TxnCount}}">{{$TxnCount}}</option>{{end}}
                      {{end}}
                      {{if ge $TxnCount 1000}}<option {{if eq $Txlen 1000}}selected{{end}} value="1000">1000</option>{{end}}
                      </select>
                  </div>
                </div>

                <div class="position-relative chart-display d-hide text-nowrap" data-target="address.chartbox">
                  <div class="modal"></div>
                  <div class="d-flex flex-wrap align-items-center justify-content-between mb-3 mt-3">
                    <select
                        id="selectBox"
                        class="chart-box"
                        data-target="address.options"
                        data-action="change->address#changeGraph"
                    >
                        <option name="types" value="types">Transaction Type</option>
                        <option name="amountflow" value="amountflow">Sent and Received</option>
                        <option name="unspent" value="unspent">Total Unspent</option>
                    </select>
                    <div id="toggle-charts" class="row t-charts d-hide" data-target="address.flow"
                        data-action="change->address#updateFlow">
                        <label class="customcheck">Sent
                            <input type="checkbox" value="2">
                            <span class="checkmark sent"></span>
                        </label>
                        <label class="customcheck">Received
                            <input type="checkbox" checked="checked" value="1">
                            <span class="checkmark received"></span>
                        </label>
                        <label class="customcheck">Net
                            <input type="checkbox" value="4">
                            <span class="checkmark net"></span>
                        </label>
                    </div>
                    <div class="d-inline-block">
                      <label style="margin: 0 1% 0 .0rem;">Zoom </label>
                      <div
                          class="btn-group"
                          data-toggle="buttons"
                          data-target="address.zoom"
                          data-action="click->address#onZoom"
                      >
                        <input type="button" class="chart-zoom btn btn_sm btn-active all" value="All Time" name="all">
                        <input type="button" class="chart-zoom btn btn_sm year" value="Year" name="year">
                        <input type="button" class="chart-zoom btn btn_sm month" value="Month" name="month">
                        <input type="button" class="chart-zoom btn btn_sm week" value="Week" name="week">
                        <input type="button" class="chart-zoom btn btn_sm day" value="Day" name="day">
                      </div>
                    </div>
                    <div class="d-inline-block">
                      <label style="margin: 0 1% 0 2%;">Group By </label>
                      <div
                          class="btn-group"
                          data-toggle="buttons"
                          data-txcount="{{$TxnCount}}"
                          data-target="address.interval"
                          data-action="click->address#changeBin"
                      >
                          <input type="button" class="chart-size btn btn_sm year" value="Year" name="year">
                          <input type="button" class="chart-size btn btn_sm month" value="Month" name="month">
                          <input type="button" class="chart-size btn btn_sm week" value="Week" name="week">
                          <input type="button" class="chart-size btn btn_sm day btn-active" value="Day" name="day">
                          <input type="button" class="chart-size btn btn_sm all" value="All Blocks" name="all">
                      </div>
                    </div>
                  </div>
                  <div id="history-chart" style="width:100%; height:500px; margin-top:20 auto;"></div>
                  <h5 id="no-bal" class="mt-2 bal-d" style="margin:7% auto 0 auto;">There are no confirmed transactions to display.</h5>
                </div>

              </div> <!-- col -->
          </div> <!-- row -->
          {{end}}
      </div> <!-- container main -->
    {{ template "footer" . }}

</body>
</html>
{{end}}
