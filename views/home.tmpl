{{define "home"}}
{{$conv := .Conversions}}
<!DOCTYPE html>
<html lang="en">

{{ template "html-head" "Decred Block Explorer by dcrdata.org"}}
    {{ template "navbar" . }}
    <div class="container main" data-controller="time blocklist homepage"
      data-homepage-windowsize="{{.ChainParams.StakeDiffWindowSize}}"
      data-homepage-blocksecs="{{.BlockTimeUnix}}"
    >
      <div class="d-flex align-items-stretch mb-3 flex-wrap">

        {{- /* PROPOSED BLOCK */ -}}
        {{with .BestBlock}}
        <div class="col-24 col-md-12 col-xl-8 bg-white mt-2 px-3 pt-2 pb-3">
          <header class="d-flex justify-content-start align-items-center">
            <span class="dcricon-block fs20 mr-2"></span>
            <span class="fs20">Proposed Block</span>
          </header>
          <hr class="my-1 home-hr w-100">
          <div class="d-flex justify-content-between">
            <div class="d-inline-block text-left lh1em">
              <span class="d-inline-block fs17 pt-2">height</span><br>
              <a href="/block/{{.Hash}}" data-keynav-priority
               class="d-inline-block fs26 medium-sans py-2"
               data-target="homepage.blockHeight"
               >{{.Height}}
              </a><br>
              <span class="fs16 text-secondary"><span data-target="homepage.blockTime time.age" data-age="{{.BlockTime.T.Unix}}"
              >{{timeSinceToShortDurationString .BlockTime.T}}</span> ago</span>
              <br>
              <span class="d-inline-block fs17 pt-3">votes</span><br>
              <div class="pb-1 pt-2 fs22" data-target="homepage.blockVotes" data-hash="{{.Hash}}">
                  {{range $index, $vote := $.BlockTally}}
                  <div
                  class="d-inline-block position-relative vote-icon"
                  data-tooltip="{{if eq $vote -1}}the stakeholder has voted to reject this block{{else if eq $vote 1}}the stakeholder has voted to accept this block{{else}}this vote has not been received yet{{end}}"
                  >
                  <span class="dcricon-{{if eq $vote -1}}reject{{else if eq $vote 1}}affirm{{else}}missing{{end}}"></span>
                  </div>
                  {{end}}
              </div>
              {{if eq $.Consensus -1}}
              <span data-target="homepage.consensusMsg" class="d-inline-block fs16 text-danger">rejected</span>
              {{else if eq $.Consensus 0}}
              <span data-target="homepage.consensusMsg" class="d-inline-block fs16">colleting votes</span>
              {{else}}
              <span data-target="homepage.consensusMsg" class="d-inline-block fs16 text-green">approved</span>
              {{end}}
            </div>
            <div class="d-inline-block text-right lh1em">
              <span class="d-inline-block fs17 pt-2" data-tooltip="total DCR sent in this block">value</span><br>
              <div class="d-flex justify-content-start align-items-end"><span class="d-inline-block py-2 fs26 medium-sans p-0"
                data-target="homepage.blockTotal"
                >{{threeSFV .Total}}</span>
                <span class="d-inline-block fs15 text-secondary pl-2 py-1">DCR</span>
              </div>
              <span class="fs16 text-secondary"><span data-target="homepage.valuePerTx">{{threeSFV $.ValPerTx}}</span> DCR / tx</span>
              <br>
              <span class="d-inline-block fs17 pt-3">size</span><br>
              {{$tsfSize := threeSFG (i32ToFloat64 .Size)}}
              <div class="d-flex justify-content-end align-items-end"><span class="d-inline-block py-2 fs26 medium-sans p-0"
                data-target="homepage.blockSize"
                >{{$tsfSize.Value}}</span>
                <span class="d-inline-block fs15 text-secondary pl-2 py-1"><span
                  data-target="homepge.sizePrefix"
                  >{{$tsfSize.Prefix}}</span>B
                </span>
              </div>
              <span class="fs16 text-secondary"><span data-target="homepage.sizePerTx">{{$.SizePerTx}}</span> bytes / tx</span>
            </div>
          </div>
        </div>
        {{end}}{{- /* END PROPOSED BLOCK */ -}}

        {{- /* MEMPOOL */ -}}
        <div class="col-24 col-md-12 col-xl-8 d-flex flex-column align-items-stretch pt-3 pb-2 px-3">
          <header class="d-flex justify-content-start align-items-center">
            <span class="dcricon-stack fs20 mr-2"></span>
            <a href="/mempool" class="fs20 unstyled-link">Mempool</a>
          </header>
          <div class="my-1 home-hr"></div>
          <div class="d-flex flex-grow-1">
            <div class="d-flex flex-grow-1">

              {{- /* PIE CHART */ -}}
              <div class="d-flex justify-content-center align-items-center flex-grow-1 position-relative mppie" data-target="homepage.mppie">
                <noscript>
                  <div class="pie75">{{template "svgPieChart" .Mempool.LikelyMineable.MempoolSizePie}}</div>
                </noscript>
              </div>
              <div class="d-flex flex-column justify-content-start lh1em">
                <div class="d-flex justify-content-start align-items-end pt-3"><span class="d-inline-block py-2 fs26 medium-sans p-0"
                  data-target="homepage.mempool"
                  {{template "mempoolDump" .Mempool}}
                  data-tooltip="transactions ready for the next block"
                  >{{threeSFV .Mempool.LikelyMineable.Total}}</span> <span class="d-inline-block fs15 text-secondary pl-2 py-1">DCR</span></div>
                {{- $tsfMpSize := threeSFG (i32ToFloat64 .Mempool.LikelyMineable.Size) -}}
                <div class="d-flex justify-content-start align-items-end pt-3"><span class="d-inline-block py-2 fs26 medium-sans p-0"
                  data-target="homepage.mempoolSize"
                  >{{$tsfMpSize.Value}}</span> <span class="d-inline-block fs15 text-secondary pl-2 py-1"
                  ><span data-target="homepage.mpSizePrefix">{{$tsfMpSize.Prefix}}</span>B</span></div>
              </div>
              <span class="pr-4 pr-xl-0"></span>{{- /* dummy element for flex spacing */ -}}
            </div>
          </div>
          <div class="d-flex justify-content-between">
            <div class="fs18 lh1em">
              <div class="d-flex justify-content-start align-items-center pt-2 text-nowrap">
                <div class="mp-legend tx-regular mr-2"></div>
                <span><span data-target="homepage.mpRegCount">{{.Mempool.NumRegular}}</span> transactions</span>
              </div>
              <div class="d-flex justify-content-start align-items-center pt-2 text-nowrap">
                <div class="mp-legend tx-vote mr-2"></div>
                <span><span data-target="homepage.mpVoteCount"
                data-tickets-per-block="{{.Mempool.VotingInfo.MaxVotesPerBlock}}">
                {{$afterFirst := false}}
                {{range $hash, $tally := .Mempool.VotingInfo.VoteTallys}}
                    {{if $afterFirst}} + {{end}}
                    <span class="position-relative d-inline-block"
                    data-target="homepage.voteTally"
                    data-hash="{{$hash}}"
                    data-affirmed="{{$tally.Affirmations}}"
                    data-count="{{$tally.VoteCount}}"
                    data-tooltip="for block {{$hash}}"
                    >{{$tally.VoteCount}}</span>
                    {{$afterFirst = true}}
                {{end}}
                </span> votes</span>
              </div>
            </div>
            <div class="fs18 lh1em">
              <div class="d-flex justify-content-start align-items-center pt-2 text-nowrap">
                <div class="mp-legend tx-ticket mr-2"></div>
                <span><span data-target="homepage.mpTicketCount">{{.Mempool.NumTickets}}</span> tickets</span>
              </div>
              <div class="d-flex justify-content-start align-items-center pt-2 text-nowrap">
                <div class="mp-legend tx-rev mr-2"></div>
                <span><span data-target="homepage.mpRevCount">{{.Mempool.NumRevokes}}</span> revocations</span>
              </div>
            </div>
            <span></span>{{- /* dummy element for flex spacing */ -}}
          </div>
        </div>

        {{- /* IMPORTANT FIGURES */ -}}
        <div class="col-24 col-md-12 col-xl-8 d-flex flex-column align-items-stretch mt-2 pt-2 pt-xl-0 pb-3 pb-xl-0 pl-0 pr-1 pr-md-2 pr-xl-0 homerow">
          <div class="d-flex flex-grow-1 mb-1">

            {{- /* TICKET PRICE */ -}}
            <div class="flex-grow-1 bg-white mr-1 border-dcrgreen position-relative"><div class="card4 d-flex flex-column">
              <header class="text-center pt-2 fs18"><a class="unstyled-link" href="/charts?chart=ticket-price&zoom=month">Ticket Price</a></header>
              <div class="flex-grow-1 d-flex flex-column justify-content-center align-items-center lh1em pb-2">
                <div class="d-flex justify-content-start align-items-end py-1"
                  ><span class="d-inline-block py-2 fs32 medium-sans p-0" data-target="homepage.ticketPrice">{{threeSFV .Info.StakeDiff}}</span>
                  <span class="d-inline-block fs15 text-secondary pl-2 py-1">DCR</span></div>
                <span class="fs16 text-secondary" data-target="homepage.convertedStake"
                  >{{if $conv}}{{$conv.StakeDiff.TwoDecimals}} {{$conv.StakeDiff.Index}}{{end}}
                </span>
              </div>
            </div></div>

            {{- /* STAKE RETURNS */ -}}
            <div class="flex-grow-1 bg-white ml-1 border-dcrblue position-relative"><div class="card4 d-flex flex-column">
              <header class="text-center pt-2 fs18">Stake Returns</header>
              <div class="flex-grow-1 d-flex flex-column justify-content-center align-items-center pb-2 lh1em">
                <div class="d-flex justify-content-start align-items-end py-1"><span class="d-inline-block py-2 fs32 medium-sans p-0"
                    >{{threeSFV .Info.ASR}}</span>
                    <span class="d-inline-block fs24 text-secondary pl-1 py-1">%</span>
                </div>
                <span class="fs16 text-secondary"
                ><span data-target="homepage.bsubsidyPos">{{threeSFV (toFloat64Amount (divide .Info.NBlockSubsidy.PoS 5))}}</span> DCR/vote</span>
              </div>
            </div></div>
          </div>

          {{- /* EXCHANGE RATE */ -}}
          <div class="d-flex flex-grow-1 mt-1">
            <div class="flex-grow-1 bg-white mr-1 border-dcrblue position-relative"><div class="card4 d-flex flex-column">
              <header class="text-center pt-2 fs18 no-underline" href="/market">Exchange Rate</header>
              <div class="flex-grow-1 d-flex justify-content-center align-items-center lh1">
                <div class="d-flex justify-content-center align-items-end pb-2 w-100">
                  {{- if $conv -}}
                    {{- if eq $conv.ExchangeRate.Index "USD" -}}
                    <span class="fs18 dolla">$</span>
                    {{- end -}}
                  <span class="d-inline-block fs36 medium-sans p-0"
                    data-target="homepage.exchangeRate">{{$conv.ExchangeRate.TwoDecimals}}</span>
                  <span class="d-inline-block fs18 text-secondary pb-1 pl-1">{{$conv.ExchangeRate.Index}}</span>
                  {{- end -}}
                </div>
              </div>
            </div></div>

            {{- /* MINING PROFITABILITY */ -}}
            <div class="flex-grow-1 bg-white ml-1 border-dcrgreen position-relative">
              <div class="card4 d-flex flex-column">
                {{$dvc := .ModelDevice}}
                <div class="info left">
                  <div>Profits taken as instantaneous earning based on the following model parameters<br><br>
                    hashrate: {{$dvc.Hashrate}} Th/s<br>
                    power draw: {{$dvc.PowerDraw}} watts<br>
                    power rate: USD 0.13 / kWh<br><br>

                    Profit formula for earnings rate, E, and power expense rate, P<br><br>
                    (E/P - 1) * 100
                  </div>
                </div>
                <header class="text-center pt-2 fs18">Mining Profit</header>
                <div class="flex-grow-1 d-flex justify-content-center align-items-center lh1">
                  <div class="d-flex justify-content-center align-items-end pb-2 w-100">
                    <span class="d-inline-block fs36 medium-sans p-0">{{fmtPercent .Info.POWProfitability}}</span>
                    <span class="d-inline-block fs18 text-secondary pb-1 pl-1">%</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        {{- /* BLOCKS TABLE */ -}}
        <div class="col-24 col-md-12 my-3 pr-0 pl-0 pl-md-1 pl-xl-0">
          <div class="bg-white h-100 ml-0 px-2 px-lg-3">
            <div class="pt-2 pb-1 d-flex justify-content-between align-items-center">
              <a href="/blocks" class="fs20 unstyled-link">Recent Blocks</a>
              <a href="/blocks" class="small ml-2">see more</a>
            </div>
            <table class="table v3small mb-1">
                <thead>
                    <tr>
                        <th class="text-left pl-0">Height</th>
                        <th class="text-center"
                          ><span class="d-lg-none position-relative" data-tooltip="regular transactions">Txn</span
                          ><span class="d-none d-lg-inline">Transactions</span></th>
                        <th class="text-center"
                          ><span class="d-lg-none position-relative" data-tooltip="vote transactions">Vote</span
                          ><span class="d-none d-lg-inline">Votes</span></th>
                        <th class="text-center"
                          ><span class="d-lg-none position-relative" data-tooltip="ticket transactions">Tkt</span
                          ><span class="d-none d-lg-inline">Tickets</span></th>
                        <th class="text-center"
                          ><span class="d-lg-none position-relative" data-tooltip="ticket revocations">Rev</span
                          ><span class="d-none d-lg-inline">Revokes</span></th>
                        <th class="text-right" data-tooltip="total DCR sent">DCR</th>
                        <th class="d-none d-sm-table-cell d-md-none d-xl-table-cell text-right">Size</th>
                        <th class="text-right pr-0">Age</th>
                    </tr>
                </thead>
                <tbody data-target="blocklist.table">
                    {{range .Blocks}}
                    <tr data-height="{{.Height}}" data-link-class="medium-sans">
                        <td class="text-left pl-0" data-type="height"><a class="medium-sans" href="/block/{{.Height}}">{{.Height}}</a></td>
                        <td class="text-center" data-type="tx">{{.Transactions}}</td>
                        <td class="text-center" data-type="votes">{{.Voters}}</td>
                        <td class="text-center" data-type="tickets">{{.FreshStake}}</td>
                        <td class="text-center" data-type="revocations">{{.Revocations}}</td>
                        <td class="text-right" data-type="value">{{threeSFV .Total}}</td>
                        <td class="text-right d-none d-sm-table-cell d-md-none d-xl-table-cell text-nowrap" data-type="size">{{.FormattedBytes}}</td>
                        <td class="text-right pr-0 text-nowrap" data-type="age" data-target="time.age" data-age="{{.BlockTime.UNIX}}">{{timeSinceToShortDurationString .BlockTime.T}}</td>
                    </tr>
                    {{end}}
                </tbody>
            </table>
          </div>
        </div>

        {{- /* CHART */ -}}
        <div class="col-24 col-md-12 pl-0 pl-xl-1 pr-2 my-3 homerow">
          {{$svg := .Info.TicketPricePolyline}}
          {{if $svg}}
          <noscript>
            <div class="home-svg lh1">
              <span class="high-y">{{threeSFV (uAtomsToDCR $svg.HighY)}}</span>
              <span class="low-y">{{threeSFV (uAtomsToDCR $svg.LowY)}}</span>
              <span class="high-x">{{unixToMonthStamp $svg.HighX}}</span>
              <span class="low-x">{{unixToMonthStamp $svg.LowX}}</span>
              <div class="svg-title medium-sans">Ticket Price</div>
              <svg viewBox="-0.05 -0.05 1.1 1.1" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">
                <line x1="-0.05" y1="0" x2="-0.05" y2="1.05" stroke="black" stroke-width="1" vector-effect="non-scaling-stroke"/>
                <line x1="-0.05" y1="1.05" x2="1.05" y2="1.05" stroke="#777" stroke-width="1" vector-effect="non-scaling-stroke"/>
                <polyline points="{{$svg.Path}}"
                  fill="none"
                  stroke="black"
                  stroke-width="2px"
                  vector-effect="non-scaling-stroke"
                />
              </svg>
            </div>
          </noscript>
          {{end}}
          <div class="home-chart-controls jsonly justify-content-between align-items-center">
            <select
              data-target="homepage.chartSelect"
              class="dropdown home"
              data-action="change->homepage#selectChart"
              >
              <option value="ticket-price">Ticket Price</option>
              <option value="hashrate">Net Hashrate</option>
            </select>
            <div class="flex-grow-1 fs14 px-2 text-center" data-target="homepage.chartLegend"></div>
            <div class="btnsetv3 ml-2">
              <button class="clearbttn" value="all" data-target="homepage.chartZoom" data-action="click->homepage#zoomClicked">all</button>
              <button class="clearbttn" value="1y" data-target="homepage.chartZoom" data-action="click->homepage#zoomClicked" data-selected>year</button>
              <button class="clearbttn" value="1mo" data-target="homepage.chartZoom" data-action="click->homepage#zoomClicked">month</button>
            </div>
          </div>
          <div class="home-chart" data-target="homepage.chart">
          </div>
        </div>

        {{with .Info}}
        {{- /* STAKING */ -}}
        <div class="col-24 col-md-12 col-xl-8 pr-0 pr-xl-2 pl-0 pl-md-1 pl-xl-0 mb-3 lh125">
          <div class="bg-white py-2 px-3 h-100">
            <header class="d-flex justify-content-start align-items-center">
              <span class="dcricon-ticket fs20 mr-2"></span>
              <span class="fs20">Staking</span>
            </header>
            <hr class="my-1 home-hr w-100">
            <div class="d-flex justify-content-between pb-2">
              <div class="d-inline-block text-left">

                {{- /* NEXT TICKET PRICE */ -}}
                <span class="d-inline-block fs16 pt-2 pb-1">next ticket price</span><br>
                <div class="d-flex justify-content-start align-items-end"
                  ><span class="d-inline-block fs24 medium-sans">~<span
                    data-target="homepage.nextExpectedSdiff"
                    >{{printf "%.2f" .NextExpectedStakeDiff}}
                  </span></span>
                  <span class="d-inline-block fs14 text-secondary pb-1 pl-1">DCR</span>
                </div>
                <div class="fs14 text-secondary d-inline-block">
                  min:<span data-target="homepage.nextExpectedMin">{{printf "%.1f" .NextExpectedBoundsMin}}</span>,
                  max:<span data-target="homepage.nextExpectedMax">{{printf "%.1f" .NextExpectedBoundsMax}}</span>
                </div>
                <br>

                {{- /* TICKET POOL SIZE */ -}}
                <a class="d-inline-block fs16 mt-4 no-underline pb-1" href="/charts?chart=ticket-pool-size">ticket pool size</a><br>
                <div class="fs24 medium-sans" data-target="homepage.poolSize">{{intComma .PoolInfo.Size}}</div>
                <div class="fs14 text-secondary d-inline-block">
                    <span data-target="homepage.targetPct">{{printf "%.2f" (toAbsValue $.PercentChange)}}</span>%
                    <span data-target="homepage.tpsOverUnder">
                      {{if lt $.PercentChange 0.0}} under {{else}} over {{end}}
                    </span>target
                </div>

              {{- /* END LEFT COLUMN */ -}}
              </div>
              <div class="d-inline-block text-right">

                {{- /* PRICE WINDOW */ -}}
                <span class="d-inline-block fs16 mt-2 pb-1">price window</span>
                <div class="progress my-1">
                    <div
                        class="progress-bar rounded"
                        data-target="homepage.posBar"
                        role="progressbar"
                        style="width: {{ticketWindowProgress .IdxBlockInWindow}}%;"
                        aria-valuenow="{{.IdxBlockInWindow}}"
                        aria-valuemin="0"
                        aria-valuemax="{{.Params.WindowSize}}"
                    >
                        <span class="nowrap pl-1">block <span data-target="homepage.windowIndex" >{{.IdxBlockInWindow}}</span> of {{.Params.WindowSize}}</span>
                    </div>
                </div>
                <div class="fs14 text-secondary d-inline-block mt-1" data-target="homepage.sdiffWindowLeft">
                  {{remaining .IdxBlockInWindow .Params.WindowSize .Params.BlockTime}}
                </div>
                <br>

                {{- /* STAKED DCR */ -}}
                <a class="d-inline-block fs16 mt-4 no-underline pb-1" href="/charts?chart=stake-participation">staked DCR</a>
                <div class="fs24 medium-sans" data-target="homepage.poolValue">{{threeSFV .PoolInfo.Value}}</div>
                <div class="fs14 text-secondary d-inline-block">
                  <span data-target="homepage.stakedPct">{{printf "%.2f" .PoolInfo.Percentage}}</span> % of total supply
                </div>
              </div>
            </div>
          </div>
        </div>

        {{- /* MINING */ -}}
        <div class="col-24 col-md-12 col-xl-8 pr-0 pr-md-1 pl-0 pl-xl-1 mb-3 lh125">
          <div class="bg-white py-2 px-3 h-100">
            <header class="d-flex justify-content-start align-items-center">
              <span class="dcricon-pickaxe fs20 mr-2"></span>
              <span class="fs20">Mining</span>
            </header>
            <hr class="my-1 home-hr w-100">

            <div class="d-flex justify-content-between pb-2">
              <div class="d-inline-block text-left">

                {{- /* DIFFICULTY */ -}}
                <span class="d-inline-block fs16 mt-2 pb-1"><a class="no-underline" href="/charts?chart=pow-difficulty">difficulty</a></span><br>
                <div class="d-flex justify-content-start align-items-"
                  ><span
                    class="d-inline-block fs24 medium-sans"
                    data-target="homepage.difficulty"
                    >{{threeSFV .Difficulty}}
                  </span>
                </div>
                <div class="fs14 text-secondary d-inline-block"
                  ><span  data-target="homepage.diffDelta">{{fmtPercent .POWDiffChangeMonth}}</span>%
                    in 30 days
                </div>
                <br>

                {{- /* POW BLOCK REWARD */ -}}
                <span class="d-inline-block fs16 mt-4 pb-1">block reward</span><br>
                <div class="d-flex justify-content-start align-items-end"
                  ><span
                    class="d-inline-block fs24 medium-sans"
                    data-target="homepage.bsubsidyPow"
                    >{{printf "%.2f" (toFloat64Amount .NBlockSubsidy.PoW)}}
                  </span>
                  <span class="d-inline-block fs14 text-secondary pb-1 pl-1">DCR</span>
                </div>
                <span class="fs14 text-secondary d-inline-block" data-target="homepage.powConverted"
                  >{{if $conv}}{{$conv.PowSplit.TwoDecimals}} {{$conv.PowSplit.Index}}{{end}}
                </span>

              {{- /* END LEFT COLUMN */ -}}
              </div>
              <div class="d-inline-block text-right">

                {{- /* HASHRATE */ -}}
                <span class="d-inline-block fs16 mt-2 pb-1"><a href="/charts?chart=hashrate">hashrate</a></span><br>
                <div class="d-flex justify-content-end align-items-end"
                  ><span
                    class="d-inline-block fs24 medium-sans"
                    data-target="homepage.hashrate"
                    >{{threeSFV .HashRate}}
                  </span>
                  <span class="d-inline-block fs14 text-secondary pb-1 pl-1">Ph/s</span>
                </div>
                <span class="fs14 text-secondary d-inline-block"
                  ><span data-target="homepage.hashrateDelta">{{fmtPercent .HashRateChangeMonth}}</span>%
                  in past 30 days
                </span>
                <br>

                {{- /* BLOCK REWARD WINDOW */ -}}
                <span class="d-inline-block fs16 mt-4 pb-1">block reward window</span><br>
                <div class="progress mt-1">
                    <div
                        class="progress-bar rounded"
                        data-target="homepage.powBar"
                        role="progressbar"
                        style="width: {{rewardAdjustmentProgress .IdxInRewardWindow}}%;"
                        aria-valuenow="{{.IdxInRewardWindow}}"
                        aria-valuemin="0"
                        aria-valuemax="{{.Params.RewardWindowSize}}"
                    >
                        <span
                            class="nowrap pl-1"
                        >
                            block <span data-target="homepage.rewardIdx" >{{.IdxInRewardWindow}}</span> of {{.Params.RewardWindowSize}}
                        </span>
                    </div>
                </div>
                <span class="fs14 text-secondary d-inline-block mt-1">{{remaining .IdxInRewardWindow .Params.RewardWindowSize .Params.BlockTime}}</span>
              </div>
            </div>
          </div>
        </div>

        {{- /* DISTRIBUTION */ -}}
        <div class="col-24 col-md-12 col-xl-8 pr-0 pl-0 pl-md-1 pl-xl-2 mb-3 lh125">
          <div class="bg-white py-2 px-3 h-100">
            <header class="d-flex justify-content-start align-items-center">
              <span class="dcricon-tree fs20 mr-2"></span>
              <span class="fs20">Distribution</span>
            </header>
            <hr class="my-1 home-hr w-100">

            <div class="d-flex justify-content-between pb-2">
              <div class="d-inline-block text-left">

                {{- /* TREASURY BALANCE */ -}}
                <span class="d-inline-block fs16 mt-2 pb-1"><a href="/address/{{.DevAddress}}?n=20&start=0&txntype=merged_debit">treasury</a></span><br>
                <div class="d-flex justify-content-start align-items-end"
                  ><span
                    class="d-inline-block fs24 medium-sans"
                    data-target="homepage.devFund"
                    >{{threeSFV (toFloat64Amount .DevFund)}}
                    </span>
                  <span class="d-inline-block fs14 text-secondary pb-1 pl-1">DCR</span>
                </div>
                <div class="fs14 text-secondary d-inline-block" data-target="homepage.convertedDev"
                  >{{if $conv}}{{threeSFV $conv.TreasuryBalance.Value}} {{$conv.TreasuryBalance.Index}}{{end}}
                </div>
                <br>

                {{- /* TREASURY SUBSIDY */ -}}
                <span class="d-inline-block fs16 mt-4 pb-1">treasury subsidy</span><br>
                <div class="d-flex justify-content-start align-items-end"
                  ><span
                    class="d-inline-block fs24 medium-sans"
                    data-target="homepage.bsubsidyDev"
                    >{{threeSFV (toFloat64Amount .NBlockSubsidy.Dev)}}</span>
                    <span class="d-inline-block fs14 text-secondary pb-1 pl-1">DCR</span>
                </div>
                <div class="fs14 text-secondary d-inline-block">
                    <span data-target="homepage.convertedDevSub"
                    >{{if $conv}}{{$conv.TreasurySplit.TwoDecimals}} {{$conv.TreasurySplit.Index}}{{end}}</span>
                </div>

              {{- /* END LEFT COLUMN */ -}}
              </div>
              <div class="d-inline-block text-right">

                {{- /* MINTED */ -}}
                <span class="d-inline-block fs16 mt-2 pb-1"><a href="/charts?chart=coin-supply">minted</a></span><br>
                <div class="d-flex justify-content-end align-items-end"
                  ><span
                    class="d-inline-block fs24 medium-sans"
                    data-target="homepage.coinSupply"
                    >{{threeSFV (toFloat64Amount .CoinSupply)}}
                    </span>
                  <span class="d-inline-block fs14 text-secondary pb-1 pl-1">DCR</span>
                </div>
                <div class="fs14 text-secondary d-inline-block" data-target="homepage.convertedSupply"
                  >{{if $conv}}{{threeSFV $conv.CoinSupply.Value}} {{$conv.CoinSupply.Index}}{{end}}
                </div>
                <br>

                {{- /* UNIQUE ADDRESSES */ -}}
                <span class="d-inline-block fs16 mt-4 pb-1">unique addresses</span><br>
                <div class="fs24 medium-sans">{{threeSFV (u64f64 .UniqueAddrs)}}</div>
                <div class="fs14 text-secondary d-inline-block">+{{threeSFV (u64f64 .AddrDelta30)}} in 30 days</div>
              </div>
          </div>
        </div>
      </div>
      {{end}}{{- /* END with .Info */ -}}
    </div>
  </div>
  {{  template "footer" . }}
</body>
</html>
{{end}}
